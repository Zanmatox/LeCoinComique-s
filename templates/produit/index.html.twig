{% extends 'base.html.twig' %}

{% block title %}Nos produits - Le Coin Comique's{% endblock %}

{% block content %}
<div class="row">
    <div class="col-md-3">
    <h1>Filtrer</h1>
    {{ form(form) }}
    </div>
    <div class="col-md-9">

    <h3>Nos produits</h3>

    <div class="row produit-container">
        {% for produit in produits %}
            <div class="col-md-4">
                <div class="produit-item text-center">
                    {# Cliquer sur une image de produit ne permet pas d'acceder a ses details #}
                    {# <a href="{{ path('produit', { 'slug' : produit.slug } ) }}"><img src="/uploads/{{ produit.illustration }}" alt="{{ produit.titre }}" class="img-fluid"></a> #}
                    <img src="/uploads/{{ produit.illustration }}" alt="{{ produit.titre }}" class="img-fluid">
                    <h5>{{ produit.titre }}</h5>
                    <span class="produit-auteur">{{ produit.auteur }}</span>
                    <span class="produit-prixpublic">{{ (produit.prixpublic)|number_format(2, ',','.')}} â‚¬</span>
                    <hr>  
                </div>
            </div>
        {% endfor %}
    </div>
    </div>
</div>
{% endblock %}
